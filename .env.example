# MongoDB Connection
# For development/testing:
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=zien-dev

# For production (use a separate database):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# DB_NAME=zien-prod

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration (for enhanced calls - TTS only)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR use API key (less secure, for development only):
# GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# Deepgram API (for enhanced calls - STT)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# Server Configuration
BASE_URL=http://localhost:8000
PORT=8000

# Service Mode (set to "true" for testing, "false" or omit for production)
USE_MOCKS=false

# Mock Twilio Verify Only (set to "true" to use real calls/SMS but mock verification codes)
# Useful for development when you want to test calls without using Twilio Verify credits
MOCK_TWILIO_VERIFY=false

# Enhanced Calls (set to "false" to use standard Twilio STT/TTS, defaults to "true")
USE_ENHANCED_CALLS=true
